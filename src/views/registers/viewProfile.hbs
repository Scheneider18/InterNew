<div class="container mt-3">
    <div class="main-body">
        <div class="row">
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="../../../img/profile.jpeg" alt="Usuario" class="rounded-circle p-1"
                                width="180">
                            <div class="mt-3">
                                <label for="nombre">{{profile.nombre}}</label>
                                <label for="apPaterno">{{profile.apellido_p}}</label>
                                <label for="apMaterno">{{profile.apellido_m}}</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card" style="position: relative; display: flex; flex-direction: column; min-width: 0; word-wrap: break-word; background-color: #ffffff; border: 0 solid transparent; border-radius: 1px; margin-bottom: 2px; box-shadow: 0 2px 6px 0 rgb(218 218 253 / 65%), 0 2px 6px 0 rgb(206 206 238 / 54%);">
                    <div class="card-body">
                        <form class="form-profile" id="profile">
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Nombre(s)</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" name="nombre" id="nombre"
                                        placeholder="Nombre" disabled value="{{profile.nombre}}">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Apellido Paterno</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" name="apPaterno" id="apPaterno"
                                        placeholder="Apellido Paterno" disabled value="{{profile.apellido_p}}">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Apellido Materno</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" name="apMaterno" id="apMaterno"
                                        placeholder="Apellido Materno" disabled value="{{profile.apellido_m}}">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Cargo</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" name="encargado" id="encargado"
                                        placeholder="Cargo" disabled value="{{profile.cargo}}">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Número de Control</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" name="noControl" id="noControl"
                                        placeholder="Número de Control" disabled value="{{profile.no_control}}">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Correo institucional</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" name="correo" id="correo"
                                        placeholder="Correo Institucional" disabled value="{{profile.correo_ins}}">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Carrera</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" name="carrera" id="carrera"
                                        placeholder="Carrera" disabled
                                        value="{{profile.carrera}}">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Semestre</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" name="carrera" id="carrera"
                                        placeholder="Carrera" disabled
                                        value="{{profile.semestre}}">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>