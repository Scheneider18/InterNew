<script> type = "text/javascript"
    let date = new Date();
    $(document).ready(function () {
        $('#datetimepicker1').attr('min', formatDate(date));

        $('#datetimepicker2').attr('min', formatDate(date));

        $('#datetimepicker3').attr('min', formatDate(date));

        $('#datetimepicker4').attr('min', formatDate(date));

    });

    function change() {
        let t1 = $('#datetimepicker3').val();
        let t2 = $('#datetimepicker4').val();
        addDay(t1)
        $('#datetimepicker1').attr('min', t1);
        $('#datetimepicker1').attr('max', t2);
        $('#datetimepicker2').attr('min', t1);
        $('#datetimepicker2').attr('max', t2);
    }

    function addDay(date){
        var d = new Date(date),
            month = '' + (d.getMonth() + 1),
            day = '' + d.getDate(),
            year = d.getFullYear();

        console.log(month)
        console.log(day)
        console.log(year)
    }

    function formatDate(date) {
        var d = new Date(date),
            month = '' + (d.getMonth() + 1),
            day = '' + d.getDate(),
            year = d.getFullYear();

        if (month.length < 2)
            month = '0' + month;
        if (day.length < 2)
            day = '0' + day;

        return [year, month, day].join('-');
    }
</script>